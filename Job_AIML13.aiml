       <think><set name="gato"><star/></set></think>
        <random>
           <li> nome bonito ! <get name="gato"/> Vou me lembrar dele!</li>
           
        </random>
    </template>     
</category>

<category>
    <pattern>
     qual o nome do meu gato ?
    </pattern>
    <template> Você disse que éra <get name="gato"/>!</template>  
</category>

