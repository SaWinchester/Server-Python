<aiml version="1.0">

<category>
    <pattern>
      meu cachorro se chama *
    </pattern>

    <template>
       <think><set name="cachorro"/></think>
        <random>
           <li> nome bonito ! <get name="cachorro"/> Vou me lembrar dele!</li>
           
        </random>
    </template>     
</category>

<category>
    <pattern>
      meu gato se chama *
    </pattern>

